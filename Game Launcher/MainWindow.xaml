<Window x:Class="Game_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_Launcher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        Title="Ceres Launcher" Height="480" Width="640">
    <Grid>
        <Image Stretch="UniformToFill" Source="images\Basic Gray.jpg" HorizontalAlignment="Center"></Image>
        <TextBlock Name="VersionText" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="20" Foreground="White" Margin="0,10,20,0" RenderTransformOrigin="0.805,0.499">1.0.0</TextBlock>
        <Button Name="PlayButton" Content="Checking for Updates" Click="PlayButton_Click" Height="60" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="150" Padding="40, 0" Foreground="Black"></Button>
    </Grid>
</Window>
